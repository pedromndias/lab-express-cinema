<div class="movies-list-container">
    <div class="movies-list-text">
        <h1>Ironhack Cinema</h1>
        <p>Click on the movie to check the showtimes!</p>
    </div>
    <div class="movies-list-cards">
        {{#each this.movie}}
        <div class="movies-list-card">
            <img src="{{this.image}}" alt="{{this.title}}">
            <h3>{{this.title}}</h3>
            <a href="/movie/{{this._id}}">See more</a>
        </div>
        {{/each}}
    </div>
</div>